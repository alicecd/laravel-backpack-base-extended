{
    "name": "novius/laravel-backpack-base-extended",
    "description": "This packages extends Backpack\\Base",
    "keywords": [
        "Novius",
        "Laravel",
        "Backpack",
        "Admin"
    ],
    "type": "library",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Tony Botalla",
            "email": "botalla@novius.fr"
        }
    ],
    "require": {
        "php": ">=7.0",
        "backpack/base": "^0.7",
        "laravel/framework": ">=5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.5.0",
        "phpunit/phpunit": "~5.7",
        "orchestra/testbench": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Novius\\Backpack\\Base\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Novius\\Backpack\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint" : [
            "php-cs-fixer fix --dry-run --config .php_cs -vv --diff --allow-risky=yes"
        ],
        "test" : [
            "phpunit"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
